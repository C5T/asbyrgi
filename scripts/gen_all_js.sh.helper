#!/bin/bash

JSOPA_CONTAINER_ID=$1
REGO="$2"

HEADER=$(head -n 1 "$REGO")

if [[ "$HEADER" =~ \#!TEST ]] ; then
  read -r UNUNSED_TEST PACKAGE RULE <<< "$HEADER"
  NAME=$(basename "$REGO")
  DIR=$(dirname "$REGO")

  echo -n "Creating '$REGO.js' ..."
  if (cd "$DIR"; cat "$NAME" | docker run -i $JSOPA_CONTAINER_ID rego2js $PACKAGE $RULE >"$NAME.js") ; then
    echo -e "\b\b\b\b: Done."
  else
    echo 'Failed.'
  fi
else
  echo "No '#!TEST' directive in '$REGO', skipping the file."
fi
