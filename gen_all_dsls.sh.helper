#!/bin/bash

JSOPA_CONTAINER_ID=$1
REGO="$2"

HEADER=$(head -n 1 "$REGO")

if [[ "$HEADER" =~ \#!TEST ]] ; then
  read -r UNUNSED_TEST PACKAGE RULE <<< "$HEADER"
  NAME=$(basename "$REGO")
  DIR=$(dirname "$REGO")

  echo -n "Creating '$REGO.dsl' ..."
  if (cd $DIR; docker run -v "$PWD":/input $CONTAINER_ID ir2dsl $NAME $PACKAGE $RULE >$NAME.dsl) ; then
    echo -e "\b\b\b\b: Done."
  else
    echo 'Failed.'
  fi
else
  echo "No '#!TEST' directive in '$REGO', skipping the file."
fi
